#!/bin/bash

modpath=$1
controllerpath=$2
workpath=$3

jobs=$(find ${controllerpath} -maxdepth 1 -type d -path '*/.*' -prune -o -type f -name "*.job" -print 2>/dev/null)
for job in ${jobs}
do
    jobname=$(echo ${job} | rev | cut -d'/' -f1 | rev)
    jobmsg=$(sbatch ${job} 2>&1)
    echo "${jobmsg} as ${jobname}."
done