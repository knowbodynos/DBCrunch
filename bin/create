#!/bin/bash

ProgDir=$(cd $(dirname "${BASH_SOURCE[0]}"); pwd -P)

modpath=$1
controllerpath=$2
#workpath=$3

modname=$(echo ${modpath} | rev | cut -d'/' -f1 | rev)
controllername=$(echo ${controllerpath} | rev | cut -d'/' -f1 | rev)

python ${ProgDir}/tools/create_controller.py ${modname} ${controllerpath}

echo "Finished creating controller job file for ${modname}_${controllername}."